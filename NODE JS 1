// employeeManagement.js

const readline = require('readline');
const rl = readline.createInterface({
  input: process.stdin,
  output: process.stdout
});

// Array to store employee data
let employees = [];

// Function to display the main menu
function showMenu() {
  console.log(`
Employee Management System
==========================
1. Add Employee
2. List Employees
3. Remove Employee
4. Exit
  `);

  rl.question('Choose an option (1-4): ', (choice) => {
    switch (choice.trim()) {
      case '1':
        addEmployee();
        break;
      case '2':
        listEmployees();
        break;
      case '3':
        removeEmployee();
        break;
      case '4':
        console.log('Exiting...');
        rl.close();
        break;
      default:
        console.log('Invalid option. Please try again.');
        showMenu();
    }
  });
}

// Function to add a new employee
function addEmployee() {
  rl.question('Enter Employee Name: ', (name) => {
    rl.question('Enter Employee ID: ', (id) => {
      // Check if ID already exists
      if (employees.find(emp => emp.id === id.trim())) {
        console.log('Employee with this ID already exists.');
      } else {
        employees.push({ name: name.trim(), id: id.trim() });
        console.log('Employee added successfully!');
      }
      showMenu();
    });
  });
}

// Function to list all employees
function listEmployees() {
  if (employees.length === 0) {
    console.log('No employees found.');
  } else {
    console.log('\nEmployee List:');
    employees.forEach((emp, index) => {
      console.log(`${index + 1}. Name: ${emp.name}, ID: ${emp.id}`);
    });
  }
  showMenu();
}

// Function to remove an employee by ID
function removeEmployee() {
  rl.question('Enter Employee ID to remove: ', (id) => {
    const index = employees.findIndex(emp => emp.id === id.trim());
    if (index !== -1) {
      employees.splice(index, 1);
      console.log('Employee removed successfully!');
    } else {
      console.log('Employee with this ID not found.');
    }
    showMenu();
  });
}

// Start the application
showMenu();
